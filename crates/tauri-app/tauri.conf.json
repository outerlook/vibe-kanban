{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Vibe Kanban",
  "version": "0.1.0",
  "identifier": "ai.bloop.vibe-kanban",
  "build": {
    "frontendDist": "../../frontend/dist"
  },
  "bundle": {
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "externalBin": ["binaries/mcp_task_server"]
  },
  "app": {
    "windows": [
      {
        "title": "Vibe Kanban",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "$HOME/**"]
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": []
    },
    "fs": {
      "scope": ["$APPDATA", "$APPDATA/**", "$HOME/**"]
    },
    "process": {},
    "dialog": {
      "all": true
    }
  }
}
